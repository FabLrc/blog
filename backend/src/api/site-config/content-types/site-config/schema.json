{
  "kind": "singleType",
  "collectionName": "site_configs",
  "info": {
    "singularName": "site-config",
    "pluralName": "site-configs",
    "displayName": "site-config"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "default": "Mon blog",
      "unique": false
    },
    "siteDescription": {
      "type": "text",
      "default": "Description du site",
      "unique": false
    },
    "siteUrl": {
      "type": "string",
      "default": "https://monblog.com",
      "unique": false
    },
    "profileName": {
      "type": "string",
      "default": "John Doe",
      "unique": false
    },
    "profileUsername": {
      "type": "string",
      "default": "JD",
      "unique": false
    },
    "profileBio": {
      "type": "text",
      "default": "Ma biographie",
      "unique": false
    },
    "profileAvatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "profileEmail": {
      "type": "email"
    },
    "socialGithub": {
      "type": "string"
    },
    "socialTwitter": {
      "type": "string"
    },
    "socialLinkedin": {
      "type": "string"
    },
    "socialEmail": {
      "type": "email"
    },
    "metaDescription": {
      "type": "text",
      "default": "Description SEO"
    },
    "metaKeywords": {
      "type": "string",
      "default": "blog,strapi,nextjs"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "footerText": {
      "type": "string",
      "default": "Texte sous le nom dans le footer"
    },
    "newsletterEnabled": {
      "type": "boolean",
      "default": true
    },
    "commentsEnabled": {
      "type": "boolean",
      "default": true
    }
  }
}
